{
  "manifest_version": 3,
  "name": "Pawkit Web Clipper",
  "version": "1.1.5",
  "description": "Save web pages, articles, and links to your Pawkit collections",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Save to Pawkit"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "contextMenus",
    "cookies"
  ],
  "host_permissions": [
    "https://pawkit.vercel.app/*",
    "https://getpawkit.com/*",
    "https://www.getpawkit.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://getpawkit.com/*", "https://www.getpawkit.com/*"],
      "js": ["pawkit-bridge.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "homepage_url": "https://www.getpawkit.com/privacy"
}
