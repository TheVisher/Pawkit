{
  "name": "@pawkit/extension",
  "version": "0.1.0",
  "private": true,
  "description": "Pawkit Web Clipper Browser Extension",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build && BUILD_TARGET=service-worker vite build && BUILD_TARGET=content-script vite build && BUILD_TARGET=pawkit-bridge vite build",
    "build:firefox": "pnpm build && cp manifest.json dist/manifest.json && mkdir -p dist-firefox && cp -r dist/* dist-firefox/",
    "build:chrome": "pnpm build && cp manifest-chrome.json dist/manifest.json && mkdir -p dist-chrome && cp -r dist/* dist-chrome/",
    "build:all": "pnpm build:firefox && pnpm build:chrome",
    "package:firefox": "cd dist-firefox && zip -r ../pawkit-firefox.zip .",
    "package:chrome": "cd dist-chrome && zip -r ../pawkit-chrome.zip .",
    "package:all": "pnpm build:all && pnpm package:firefox && pnpm package:chrome",
    "preview": "vite preview",
    "dev:firefox": "pnpm build:firefox && web-ext run --source-dir=./dist-firefox",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.30",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.26",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-static-copy": "^1.0.6",
    "web-ext": "^7.12.0"
  }
}
