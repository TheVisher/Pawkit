{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pawkit",
  "version": "0.1.0",
  "identifier": "com.pawkit.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "",
    "frontendDist": "../standalone"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Pawkit",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"],
    "resources": ["binaries/*"],
    "externalBin": ["binaries/node"]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
