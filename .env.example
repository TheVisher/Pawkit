# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Supabase (for authentication)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Optional: Preview Service (if you have one set up)
# NEXT_PUBLIC_PREVIEW_SERVICE_URL="https://your-preview-service.com"

# Filen cloud storage encryption (REQUIRED in production)
# Must be exactly 32 characters for AES-256 encryption
# Generate with: openssl rand -base64 24 | head -c 32
FILEN_ENCRYPTION_KEY="your-32-character-secret-key!!!"

# Kit AI (optional)
# Get API key from console.anthropic.com
ANTHROPIC_API_KEY=
NEXT_PUBLIC_KIT_ENABLED=false
# Your Supabase user ID (find with: SELECT id FROM auth.users WHERE email = 'your@email.com')
KIT_ALLOWED_USER_ID=
