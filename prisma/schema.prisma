generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Card {
  id             String    @id @default(cuid())
  type           String    @default("url")
  url            String
  title          String?
  notes          String?
  content        String?
  status         String    @default("PENDING")
  tags           String?
  collections    String?
  domain         String?
  image          String?
  description    String?
  metadata       String?
  articleContent String?
  pinned         Boolean   @default(false)
  deleted        Boolean   @default(false)
  deletedAt      DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Collection {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  parentId  String?
  pinned    Boolean   @default(false)
  deleted   Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
