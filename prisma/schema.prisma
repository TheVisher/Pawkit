generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String   @id
  email                 String   @unique
  displayName           String?
  denPasswordHash       String?
  denEncryptionEnabled  Boolean  @default(false)
  denSyncEnabled        Boolean  @default(true)
  serverSync            Boolean  @default(true) // Local-only mode when false
  extensionToken        String?  @unique
  extensionTokenCreatedAt DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  cards          Card[]
  collections    Collection[]
  noteFolders    NoteFolder[]
  viewSettings   UserViewSettings[]
  settings       UserSettings?
  deviceSessions DeviceSession[]
  todos          Todo[]
  calendarEvents CalendarEvent[]
}

model Card {
  id              String    @id @default(cuid())
  type            String    @default("url")
  url             String
  title           String?
  notes           String?
  content         String?
  status          String    @default("PENDING")
  tags            String?
  collections     String?
  domain          String?
  image           String?
  description     String?
  metadata        String?
  articleContent  String?
  summary         String?   // AI-generated summary
  summaryType     String?   // 'concise' or 'detailed'
  transcriptSegments String? @map("transcript_segments") // JSON array of timestamped segments for YouTube videos
  pinned          Boolean   @default(false)
  deleted         Boolean   @default(false)
  deletedAt       DateTime?
  inDen           Boolean   @default(false)
  encryptedContent String?
  scheduledDate   DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // File card support (files stored locally in IndexedDB, not synced to server)
  isFileCard      Boolean   @default(false)
  fileId          String?   // Reference to local IndexedDB file

  // Cloud sync tracking (for notes syncing to cloud providers)
  cloudId         String?   // Provider-specific ID (e.g., Filen UUID)
  cloudProvider   String?   // Provider name: "filen", "google-drive", "dropbox", etc.
  cloudSyncedAt   DateTime? // Last successful sync to cloud

  // Note folder organization (for notes only - type='md-note' or 'text-note')
  noteFolderId    String?   // Reference to note folder
  noteFolder      NoteFolder? @relation(fields: [noteFolderId], references: [id], onDelete: SetNull)

  // Junction table for notes appearing in Pawkits
  collectionNotes CollectionNote[]

  @@index([userId])
  @@index([userId, deleted])
  @@index([userId, inDen])
  @@index([userId, scheduledDate])
  @@index([userId, noteFolderId])
  // Note: Unique constraint on (userId, url) is applied via custom migration
  // with WHERE type = 'url' AND deleted = false
  // This allows: (1) notes to have duplicate URLs, (2) re-adding previously deleted URLs
}

model Collection {
  id                   String    @id @default(cuid())
  name                 String
  slug                 String    @unique
  parentId             String?
  coverImage           String?
  coverImagePosition   Int?      // Vertical position percentage (0-100)
  hidePreview          Boolean   @default(false) // Hide card preview tiles on pawkit card
  useCoverAsBackground Boolean   @default(false) // Use cover image as pawkit card background
  pinned               Boolean   @default(false)
  deleted              Boolean   @default(false)
  deletedAt            DateTime?
  inDen                Boolean   @default(false) // DEPRECATED: kept for migration, use isPrivate instead
  isPrivate            Boolean   @default(false) // Private pawkits isolate cards from Library/Timeline/Search
  isSystem             Boolean   @default(false) // System pawkits cannot be deleted/renamed
  passwordHash         String?   // Optional per-pawkit password protection
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  userId               String
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Junction table for notes appearing in this Pawkit
  collectionNotes      CollectionNote[]

  @@index([userId])
  @@index([userId, deleted])
  @@index([userId, inDen])
  @@index([userId, isPrivate])
}

model UserViewSettings {
  id        String   @id @default(cuid())
  userId    String
  view      String   // "library", "notes", "den", "timeline", "pawkits", etc.

  // Layout settings
  layout    String   @default("grid") // grid, masonry, list, compact
  cardSize  Int      @default(3)      // 1-5 scale

  // Display settings
  showTitles    Boolean @default(true)
  showUrls      Boolean @default(true)
  showTags      Boolean @default(true)
  cardPadding   Int     @default(2)    // 0-4 scale

  // Sorting settings
  sortBy        String  @default("createdAt") // createdAt, title, url, updatedAt, pawkit
  sortOrder     String  @default("desc")       // asc, desc

  // View-specific settings (JSON for flexibility)
  viewSpecific  String? // JSON string for view-specific options

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, view])
  @@index([userId])
}

model UserSettings {
  id        String   @id @default(cuid())
  userId    String   @unique

  // General app settings
  autoFetchMetadata   Boolean @default(true)
  showThumbnails      Boolean @default(true)
  previewServiceUrl   String  @default("http://localhost:8787/preview?url={{url}}")
  theme               String  @default("dark")      // dark, light, auto
  accentColor         String  @default("purple")    // purple, blue, green, red, orange
  uiStyle             String  @default("modern")    // modern, glass
  surfaceTint         String  @default("none")      // none, purple
  notifications       Boolean @default(true)
  autoSave            Boolean @default(true)
  compactMode         Boolean @default(false)
  showPreviews        Boolean @default(true)
  autoSyncOnReconnect Boolean @default(true)
  cardSize            Int     @default(3)           // 1-5 scale

  // Onboarding
  onboardingSeeded          Boolean @default(false)   // true once sample data has been seeded
  onboardingBannerDismissed Boolean @default(false)   // true once welcome banner has been dismissed
  onboardingTourCompleted   Boolean @default(false)   // true once guided tour has been completed or skipped

  // JSON fields for complex data structures
  displaySettings     String  @default("{}") // JSON: Record<Area, DisplaySettings>
  pinnedNoteIds       String  @default("[]") // JSON: string[]
  recentHistory       String  @default("[]") // JSON: RecentItem[]

  // Sidebar visibility settings
  showSyncStatusInSidebar       Boolean @default(true)
  showKeyboardShortcutsInSidebar Boolean @default(true)

  // Default view preferences
  defaultView         String  @default("masonry")   // grid, masonry, list
  defaultSort         String  @default("dateAdded") // dateAdded, recentlyModified, title, domain

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model DeviceSession {
  id         String   @id
  userId     String
  deviceId   String
  deviceName String
  browser    String?
  os         String?
  lastActive DateTime @default(now())
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, deviceId])
  @@index([userId])
  @@index([userId, lastActive])
}

model Todo {
  id          String    @id @default(cuid())
  userId      String
  text        String
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Phase 1: Due dates and completion tracking
  dueDate     DateTime? // null = backlog (no due date)
  completedAt DateTime? // When it was completed (for filtering "completed today")

  // Phase 2: Priority and linking (for future)
  // priority      String?   // "high" | "medium" | "low"
  // linkedCardId  String?   // optional link to a card

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, completed])
  @@index([userId, dueDate])
}

model CalendarEvent {
  id                  String    @id @default(uuid())
  userId              String
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  title               String
  date                String    // YYYY-MM-DD
  endDate             String?   // For multi-day events
  startTime           String?   // HH:mm
  endTime             String?   // HH:mm
  isAllDay            Boolean   @default(true)

  description         String?
  location            String?
  url                 String?
  color               String?

  // Recurrence
  recurrence          Json?     // Store recurrence object as JSON
  recurrenceParentId  String?
  excludedDates       String[]  @default([])
  isException         Boolean   @default(false)

  // Source tracking
  source              Json?     // { type: 'manual' | 'card' | 'note', cardId?, noteId? }

  // Metadata
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  deleted             Boolean   @default(false)
  deletedAt           DateTime?

  @@index([userId])
  @@index([userId, date])
  @@index([userId, deleted])
}

// Note folder organization (hierarchical folders for notes)
model NoteFolder {
  id        String   @id @default(cuid())
  userId    String
  name      String
  parentId  String?  // Self-reference for nested folders
  position  Int      @default(0) // For ordering within parent
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent    NoteFolder? @relation("NoteFolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children  NoteFolder[] @relation("NoteFolderHierarchy")
  cards     Card[]      // Notes in this folder

  @@index([userId])
  @@index([userId, parentId])
}

// Junction table for notes appearing in Pawkits (Collections)
model CollectionNote {
  id           String   @id @default(cuid())
  collectionId String   // The Pawkit
  cardId       String   // The note (Card with type='md-note' or 'text-note')
  position     Int      @default(0) // For ordering within the collection
  createdAt    DateTime @default(now())

  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  card         Card       @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([collectionId, cardId])
  @@index([collectionId])
  @@index([cardId])
}

